#!/usr/bin/env bash

echo "[Session Initializer] starting."
sleep 3

host_init_script="${HOME}/.local/init.d/`hostname`.sh"
if [ -x "${host_init_script}" ]; then
	echo "Executing session init: ${host_init_script}"
	if ! ${HOME}/.local/init.d/`hostname`.sh ; then
		echo "WARN: Session init exited non-zero."
	fi
fi

echo "[Session Initializer] complete."
